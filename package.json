{
  "name": "crypto-trading-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev --turbopack --port 3000\" \"sleep 3 && curl -s http://localhost:3000/ > /dev/null\"",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint 'app/**/*.{js,ts,tsx}' --fix",
    "format": "prettier --write 'app/**/*.{js,ts,tsx,json,css,md}'",
    "test": "jest",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "npm run docker:down && npm run docker:build && npm run docker:up && npm run docker:logs",
    "get-host": "dotenv -e .env print NEXT_PUBLIC_HOST"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "verbose": true
  },
  "dependencies": {
    "@eslint/compat": "^1.3.2",
    "@reduxjs/toolkit": "^2.9.0",
    "@types/lodash": "^4.17.20",
    "@types/react-redux": "^7.1.34",
    "big.js": "^7.0.1",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-redux": "^9.2.0",
    "recharts": "^3.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/big.js": "^6.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.1.2",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "ts-jest": "^29.4.4",
    "typescript": "^5"
  }
}
